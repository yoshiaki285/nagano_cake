<div class="container">
  <div class="row">
    <h4 class="bg-light m-5">マイページ</h4>
  </div>
  <div class="row">
      <div class="font-weight-bold h4 mr-3 mb-0",  style="line-height:3rem;">登録情報</div>
      <%= link_to "編集する", customers_information_edit_path, class: 'btn btn-lg btn-success text-light font-weight-bold' %>
  </div>
  <div class="row">
    <table class="table table-bordered table-lg mt-3">
      <tr>
        <th class="table-active col-2">氏名</th>
        <td class="col-8"><%= @customer.full_name %></td>
      </tr>
      <tr>
        <th class="table-active">カナ</th>
        <td><%= @customer.full_name_kana %></td>
      </tr>
      <tr>
        <th class="table-active">郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th class="table-active">住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th class="table-active">電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th class="table-active">メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
    </table>
  </div>
  <div class="row mt-3">
    <table class="table table-borderless table-sm w-auto mt-3">
      <tbody>
        <tr>
          <th class="font-weight-bold h4", style="vertical-align:middle;">配送先</th>
          <td><%= link_to "一覧を見る", addresses_path, class: 'btn btn-lg mb-3 ml-3 btn-primary text-light font-weight-bold' %></td>
        </tr>
        <tr>
          <th class="font-weight-bold h4", style="vertical-align:middle;">注文履歴</th>
          <td><%= link_to "一覧を見る", orders_path, class: 'btn btn-lg ml-3 btn-primary text-light font-weight-bold' %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>