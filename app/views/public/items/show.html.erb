<div class="container">
  <div class="row mt-5">
    <div class="col-md-4 offset-1">
      <%= image_tag @item.image, width: '100%', height: '100%' %>
    </div>
    <div class="col-md-7 w-100">
      <div class="d-inline-flex flex-column">
        <div class="h3 font-weight-bold mb-2"><%= @item.name %></div>
        <div class="h4 font-weight-bold mb-5"><%= @item.introduction %></div>
        <div class="h3 font-weight-bold mb-4">
          <%= @item.price.to_s(:delimited) %>円(税込)
        </div>
        <div class="select">
          <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
            <%= f.hidden_field :item_id, :value => @item.id %>
            <%= f.select :amount, *[1..10],  { prompt: '個数選択' }, { class: "h4 mb-0 rounded" } %>
            <%= f.submit "カートに入れる", class: "btn btn-success h4 ml-5" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


