<%= form_with model: @order, url: orders_confirm_path, method: :post do |f| %>
<div class="container">
  <div class="row ml-5 mb-2">
    <h4 class="bg-light">注文情報入力</h4>
  </div>
  <div class="row h-auto mb-2">
    <div class="pay_method_title w-100">
      <p class="lead font-weight-hold">支払方法</p>
    </div>
    <div class="pay_method ml-5">
      <p class="mb-0">
        <%= f.radio_button :pay_method, Order.payment_methods.key(0) %>
        <%= f.label :pay_method_credit_card, Order.payment_methods_i18n[:credit_card] %>
      </p>
      <p>
        <%= f.radio_button :pay_method, Order.payment_methods.key(1) %>
        <%= f.label :pay_method_transfer, Order.payment_methods_i18n[:transfer] %>
      </p>
    </div>
  </div>
  <div class="row h-auto mb-2">
    <div class="pay_method_title w-100">
      <p class="lead font-weight-hold">お届け先</p>
    </div>
    <div class="pay_method ml-5">
      <p class="mb-0">
        <%= f.radio_button :address_option, 0, checked: "checked" %>
        <%= f.label :order_address, "ご自身の住所" %></br>
        <%= current_customer.self_address_display %></br>
        <%= current_customer.full_name %>
      </p>
      <p>
        <%= f.radio_button :address_option, 1 %>
        <%= f.label :order_address, "登録済住所から選択" %></br>
        <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
      </p>
      <p>
        <%= f.radio_button :address_option, 2 %>
        <%= f.label :order_address, "新しいお届け先" %>
      </p>
      <table>
        <tr>
          <td><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></td>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <td><%= f.label :address, "住所" %></td>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <td><%= f.label :name, "宛名" %></td>
          <td><%= f.text_field :name %></td>
        </tr>
      </table>
      <%= f.submit "確認画面へ進む", class:"btn btn-md btn-primary" %>
    </div>
  </div>
</div>
<% end %>  
  
  