<div class="container">
  <div class="row ml-5 mb-2">
    <div class="col-2 offset-1">
      <h4 class="bg-light">注文履歴詳細</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-7 offset-1">
      <h5 class="font-weight-bold">注文情報</h5>
      <table class="table table-bordered">
        <tr>
          <th class="bg-light">注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th class="bg-light">配送先</th>
          <td>〒<%= @order.postal_code %></br><%= @order.address %></br><%= @order.name %></td>
        </tr>
        <tr>
          <th class="bg-light">支払方法</th>
          <td><%= @order.pay_method_i18n %></td>
        </tr>
        <tr>
          <th class="bg-light">ステータス</th>
          <td><%= @order.order_status_i18n %></td>
        </tr>
      </table>
    </div>
    <div class="col-3">
      <h5 class="font-weight-bold">請求情報</h5>
      <table class="table table-bordered">
        <tr>
          <th class="bg-light">商品合計</th>
          <td><%= (@order.payment-@order.postage).to_s(:delimited) %></td>
        </tr>
        <tr>
          <th class="bg-light">配送料</th>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <th class="bg-light">請求金額</th>
          <td><%= @order.payment.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-9 offset-1">
      <h5 class="font-weight-bold">注文内容</h5>
      <table class="table table-bordered ">
        <thead class="thead-light">
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </thead>
        <tbody>
          <% @order.order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.item.add_tax_price.to_s(:delimited) %></td>
              <td><%= order_detail.amount %></td>
              <td>
                <% subtotal = (order_detail.item.add_tax_price*order_detail.amount).to_i %>
                <%= subtotal.to_s(:delimited) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>