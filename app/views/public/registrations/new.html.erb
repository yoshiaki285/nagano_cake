<%= form_with model: @customer, url: new_customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="container">
    <div class="row">
      <h2 class="bg-light m-5">新規会員登録</h2>
    </div>
    <div class="row">
      <table class="table table-borderless table-sm">
        <tbody>
            <tr><td style="width: 20%">名前</td><td style="width: 1%"><span class="mr-3"><%= f.label :last_name %></span></td><td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></td><td style="width: 1%"><span class="mr-3"><%= f.label :first_name %></span></td><td><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></td></tr>
            <tr><td>フリガナ</td><td><%= f.label :last_name_kana %></td><td><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %></td><td><%= f.label :first_name_kana %></td><td><%= f.text_field :firsts_name_kana, autofocus: true, autocomplete: "first_name_kana" %></td></tr>
            <tr><td><%= f.label :email %></td><td></td><td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td></tr>
            <tr><td><%= f.label :postal_code %></td><td></td><td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td></td></tr>
            <tr><td><%= f.label :address %></td><td></td><td colspan="3"><%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
             <!--, size: 40-->
            <tr><td><%= f.label :telephone_number %></td><td></td><td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></td></tr>
            <tr><td><%= f.label :password %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %></td><td></td><td><%= f.password_field :password, autocomplete: "new-password" %></td></tr>
            <tr><td><%= f.label :password_confirmation %></td><td></td><td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td></tr>
            <tr><td></td><td></td><td><%= f.submit "新規登録", class: 'btn btn-success' %></td></tr>
        </tbody>
      </table>
      </div>
    </div>

      <div class="actions">

      </div>
    </div>
  </div>
<% end %>

<%= render "public/shared/links" %>
