<div class="container">
  <div class="row justify-content-between">
    <div class="col-4">
      <h4 class="bg-light text-center">ショッピングカート</h4>
    </div>
    <div class="col-4 ">
      <%= link_to "カートを空にする", cart_items_destroy_all_path, class:"btn btn-sm btn-danger" %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table table-bordered">
        <thaed class="thead-light">
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thaed>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td><%= cart_item.item.name %></td>
              <td><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
              <td><%= cart_item.amount %></td>
              <td><%= cart_item.subtotal.to_s(:delimited) %></td>
              <% @total_price += cart_item.subtotal %>
              <td><%= link_to "削除する", cart_items_path(cart_item.id), class:"btn btn-sm btn-danger", method: :delete %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row justify-content-between">
    <div class="col-3">
      <%= link_to "買い物を続ける", items_path, class:"btn btn-md btn-primary p-3 font-weight-bold" %>
    </div>
    <div class="col-3">
      <table class="table table-bordered">
        <tbody>
          <th class="bg-light">合計金額</th>
          <td><%= @total_price.to_s(:delimited) %></td>
        </tbody>
      </table>
    </div>
  </div>
</div>
