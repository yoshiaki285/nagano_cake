
<div class="container">
  <div class="row mb-3">
    <h4 class="bg-light m-5">ジャンル一覧・追加</h4>
  </div>
  <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
    <div class="row mb-5">
      <div class="text-center w-auto h-auto h6">
        <label for="genre_name">ジャンル名</label>
      </div>
      <div class="mx-5">
        <%= f.text_field :name, size: 20, class:"form-control", placeholder:"ジャンル名" %>
      </div>
      <div class="form-group">
        <%= f.submit '新規登録', class:"btn btn-md btn-success" %>
      </div>
    </div>
  <% end %>
  <table class="table w-auto">
    <thead class="thead-light">
      <tr>
        <th colspan="2">ジャンル</th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
