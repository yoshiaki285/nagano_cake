<div class="container px-5 px-sm-0">
  <div class="row">
    <h4 class="bg-light m-5">会員一覧</h4>
  </div>
  <dev class="row">
    <div class="col-md-8 offset-md-1">
      <table class="table table-hover table-inverse">
        <thead class="thead-light">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to customer.full_name, admin_customer_path(customer.id) %></td>
              <td><%= customer.email %></td>
              <% if customer.is_deleted == false %>
                <td class="text-success font-weight-bold">有効</td>
              <% else %>
                <td class="text-muted font-weight-bold">退会</td>
              <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-2 offset-md-5 align-self-center">
      <%= paginate @customers, theme: 'twitter-bootstrap-4' %>
    </div>
  </div>
</div>