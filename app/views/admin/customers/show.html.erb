<div class="container">
  <div class="row">
    <h4 class="bg-light m-5"><%= @customer.full_name %>さんの会員詳細</h4>
  </div>
  <div class="row">
    <table class="table table-borderless table-lg w-auto mt-3">
      <tbody>
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
          <td></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @customer.full_name %></td>
          <td></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @customer.full_name_kana %></td>
          <td></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
          <td></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
          <td></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
          <td></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
          <td></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <% if @customer.is_deleted == false %>
            <td class="text-success font-weight-bold">有効</td>
          <% else %>
            <td class="text-muted font-weight-bold">退会</td>
          <% end %>
          <td></td>
        </tr>
        <tr>
          <th></th>
          <td>
            <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: 'btn btn-sm btn-success text-light' %>
            <%= link_to "注文履歴一覧を見る", admin_path, class: 'btn btn-sm ml-5 btn-primary text-light' %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>